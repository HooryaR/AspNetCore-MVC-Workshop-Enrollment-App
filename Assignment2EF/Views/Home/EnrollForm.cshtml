@model Enrollement
@{
    Layout = "_Layout"; ViewBag.Title = "Workshop Enrollement";
}

<h2 class="display-3 m-2">Workshop Enrollement</h2>
<hr class="m-2" />
@if(ViewContext.RouteData.Values["id"].ToString() == "1"){
    <h5 class="display-4 m-2">Enrolling into Workshop:<p class="h5 display-4 m-2 text-primary d-inline">Introduction to Python</p></h5>
}
else if (ViewContext.RouteData.Values["id"].ToString() == "2"){
    <h5 class="display-4 m-2">Enrolling into Workshop:<p class="h5 display-4 m-2 text-primary d-inline">Introduction to C#</p></h5>
}
else if (ViewContext.RouteData.Values["id"].ToString() == "3"){
    <h5 class="display-4 m-2">Enrolling into Workshop:<p class="h5 display-4 m-2 text-primary d-inline">Introduction to Java</p></h5>
}

<form asp-action="Enroll" method="post" class="m-2">   
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Name:</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label">Email: </label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <button style="margin-top:15px;margin-bottom:15px" type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" style="margin-top:15px;margin-bottom:15px" class="btn btn-outline-secondary">Back</a>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Validation Errors:</strong>
            @Html.ValidationSummary()
        </div>
    }
</form>